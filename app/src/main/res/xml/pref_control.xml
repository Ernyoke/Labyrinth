<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
<PreferenceCategory
    android:title="@string/title_control_types"
    android:key="pref_key_controls">
    <ListPreference
        android:key="pref_input_control"
        android:title="@string/title_control_types"
        android:defaultValue="@string/default_control"
        android:dialogTitle="@string/title_control_types"
        android:entries="@array/pref_control_types"
        android:entryValues="@array/pref_control_type_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <SeekBarPreference
        android:key="pref_input_sensitivity"
        android:defaultValue="50"
        android:title="@string/title_sensitivity"
        android:max="100"
        />
</PreferenceCategory>

</PreferenceScreen>
